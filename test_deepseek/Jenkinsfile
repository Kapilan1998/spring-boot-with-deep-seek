pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9-eclipse-temurin-21'
                    reuseNode true
                }
            }
            steps {
                sh '''
                ls -la
                cd test_deepseek
                ls -la
                java -version
                mvn -version
                mvn clean package -DskipTests
                ls -la target/
                '''
            }
        }

        stage('Test') {
                    agent {
                        docker {
                            image 'maven:3.9-eclipse-temurin-21'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                        cd test_deepseek
                        mvn test
                        '''
                        junit 'test_deepseek/target/surefire-reports/*.xml'
                    }
                }
    }
}
