pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'eclipse-temurin:21-jdk'
                    reuseNode true
                }
            }
            steps {
                sh '''
                ls -la
                java -version
                mvn -version
                mvn clean package -DskipTests
                ls -la target/
                '''
            }
        }
    }
}
